{
  "name": "Attenture",
  "description": "Records the current tab in an offscreen document.",
  "version": "1",
  "manifest_version": 3,
  "minimum_chrome_version": "116",
  "action": {
    "default_icon": "icons/not-recording.png"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["dist/styles.css"],
      "js": ["dist/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*.png",
        "dist/styles.css",
        "videos/subway-surfers.mp4",
        "videos/gta-5.mp4"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "tabCapture",
    "offscreen",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": ["https://*.speechmatics.com/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
