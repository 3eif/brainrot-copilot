{
  "manifest_version": 3,
  "name": "Tab Capture - Audio Recorder",
  "version": "1.0.0",
  "action": {
    "default_title": "Start Audio Capture",
    "default_icon": "icons/not-recording.png"
  },
  "description": "Records audio from the current tab in an offscreen document.",
  "permissions": [
    "storage",
    "unlimitedStorage",
    "background",
    "activeTab",
    "tabCapture",
    "notifications",
    "offscreen"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "dist/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["offscreen.html", "src/offscreen.ts"],
      "matches": ["<all_urls>"]
    }
  ]
}
